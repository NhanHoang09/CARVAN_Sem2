<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>

    <link rel="stylesheet" href="~/Content/css/base.css">

    <link rel="stylesheet" href="~/Content/Scripts/library/bootstrap-4.5.3/css/bootstrap.min.css">


    <link rel="stylesheet" href="~/Content/Scripts/library/fontawesome-free-5.15.3-web/css/all.min.css">
    <script src="~/Content/Scripts/library/jquery/jquery-3.6.0.min.js"></script>
    <script src="~/Content/Scripts/library/bootstrap-4.5.3/js/bootstrap.min.js"></script>
    <script src="~/Content/Scripts/library/jquery/jquery.counterup.min.js"></script>
    <script src="~/Content/Scripts/library/jquery/jquery.waypoints.js"></script>
    <script src="~/Content/Scripts/library/slick-1.8.1/slick/slick.min.js"></script>



</head>
<body>
    <div class="wrapper">
        <nav>
            <input type="checkbox" id="show-search">
            <input type="checkbox" id="show-menu">
            <label for="show-menu" class="menu-icon"><i class="fas fa-bars"></i></label>
            <div id="logo">
                <img src="~/Content/image/CARVAN.png" alt="">
            </div>
            <div class="content">
                @{
                    Html.RenderAction("GetMenuView", new { controller = "Common" }); 
                    }
               
                </div>
                <label for="show-search" class="search-icon"><i class="fas fa-search"></i></label>
                <form action="#" class="search-box">
                    <input type="text" placeholder="Type Something to Search..." required>
                    <button type="submit" class="go-icon"><i class="fas fa-long-arrow-alt-right"></i></button>
                </form>
                <div class="account">
                    <div class="account-profile" onclick="menuToggle()">
                        <img src="~/Content/image/profile2.png" alt="">
                    </div>
                    <div class="menu">
                        <ul>
                            <li><a href="./htmls/login.html">Log In</a></li>
                            <li><a href="./htmls/register.html">register</a></li>
                        </ul>
                    </div>
                </div>
        </div>
        @RenderBody()
        <footer class="container-fluid">
            <div class="footer_info">
                <div class="footer_width about col-md-4">
                    <div class="footer-email-form">
                        <h2>Join our news letter</h2>
                        <div oncontextmenu='return false' class='snippet-body'>
                            <div class="modal-container container d-flex justify-content-center">
                                <div class="row">
                                    <div class="col-md-6 div-modal">
                                        <input class="input" type="text" placeholder="Enter your Email" required>
                                        <button type="button" class="btn btn-lg btn-warning btn-modal" data-toggle="modal" data-target="#myModal">Submit</button>
                                    </div>
                                </div>
                            </div>
                            <div class="modal fade" id="myModal" role="dialog">
                                <div class="modal-dialog">
                                    <div class="card modal-card">
                                        <div class="text-right cross"> <i class="fa fa-times"></i> </div>
                                        <div class="card-body text-center">
                                            <img src="~/Content/image/congratulations_icon.png" width="300px" height="300px">
                                            <h4 class="cong">Thank you for subscribe</h4>
                                            <p class="cong-modal">Congratulations on your successful registration!</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="wrapper-social">
                        <div class="icon facebook">
                            <div class="tooltip">
                                Facebook
                            </div>
                            <span> <a href="https://facebook.com/"><i class="fab fa-facebook-f"></i></a></span>
                        </div>
                        <div class="icon twitter">
                            <div class="tooltip">
                                Twitter
                            </div>
                            <span><a href="https://twitter.com/"><i class="fab fa-twitter"></i></a></span>
                        </div>
                        <div class="icon youtube">
                            <div class="tooltip">
                                YouTube
                            </div>
                            <span><a href="https://youtube.com/"><i class="fab fa-youtube"></i></a></span>
                        </div>
                    </div>
                </div>

                <div class="footer_width link col-md-4">
                    <h2>Quick Link</h2>
                    <ul>
                        <li><a href="@Url.Action("About", new { controller = "Home" })">About Us</a></li>
                        <li><a href="@Url.Action("Index", new { controller = "Products"})">Range of cars</a></li>
                        <li><a href="@Url.Action("Contact", new { controller = "Home" })">Contact Us</a></li>
                        <li><a href="@Url.Action("Sitemap", new { controller = "Home" })">Site map</a></li>
                    </ul>
                </div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3345.0855121590807!2d-98.76110613447415!3d33.027877528458326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8653c3f02119d0d7%3A0x1ececcdfb63b8142!2sYoung%20County!5e0!3m2!1sen!2s!4v1625683921772!5m2!1sen!2s" width="350" style="border:0; margin-left: 18px;" allowfullscreen="" loading="lazy"></iframe>
            </div>
            <div class="copy-right">
                COPYRIGHT 2021 BY NH GROUP
            </div>
        </footer>
        <script src="~/Content/Scripts/data.js"></script>
        <script src="~/Content/Scripts/main.js"></script>
        <script src="~/Content/Scripts/library/Gsap/gsap.min.js"></script>

        <script>
            /*TITLE Y IMG*/
            //gsap.from('.home__title', { opacity: -1, duration: 1.5, delay: 2 })
            //gsap.from('.home__img', { opacity: 0, duration: 1, delay: 2, x: 100 })
            //gsap.from('.home__information', { opacity: 0, duration: 1, delay: 2, y: -30 })
            /////*BOX*/
            //gsap.from('.box__medium', { opacity: 0, duration: 1.5, delay: 1.3, y: -50 })
            //gsap.from('.box__small', { opacity: -1, duration: 1.5, delay: 1.4, y: -50 })
            // -----count up-----
            //$('.counter').counterup({
            //    delay: 8,
            //    time: 2000
            //});
            //$('.counter').addclass('animated fadeindownbig');
            //$('h3').addClass('animated fadeIn');

            // -----slideshow-----
            $(document).ready(function () {
                $('.customer-logos').slick({
                    slidesToShow: 6,
                    slidesToScroll: 1,
                    autoplay: true,
                    autoplaySpeed: 1500,
                    arrows: false,
                    dots: false,
                    pauseOnHover: false,
                    responsive: [{
                        breakpoint: 768,
                        setting: {
                            slidesToShow: 4
                        }
                    }, {
                        breakpoint: 520,
                        setting: {
                            slidesToShow: 3
                        }
                    }]
                });
            });

        </script>
    </body>
</html>
